---
import Card from "./Card.astro";
import projects from "@/projects";
---

<section id="projects" class="pt-16">
    <div class="mx-auto max-w-5xl px-4 lg:px-0">
        <h2 class="mb-4 border-b border-separator pb-1 text-center text-3xl font-semibold">Projects</h2>
        <ul role="list" class="flex flex-wrap justify-between">
            {projects.map(project => <Card {...project} />)}
        </ul>
    </div>
</section>
