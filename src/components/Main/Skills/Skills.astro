---
import skills from "@/skills";
import Skill from "./Skill.astro";
---

<section id="skills" class="pt-16">
    <div class="mx-auto max-w-5xl px-4 lg:px-0">
        <h2 class="mb-4 border-b border-separator pb-1 text-center text-3xl font-semibold">Skills</h2>
        <div class="skill-icons mx-auto flex flex-wrap gap-4 p-6 text-center text-sm">
            {skills.map(skill => <Skill name={skill.name} imageSrc={skill.imageSrc} />)}
        </div>
    </div>
</section>
